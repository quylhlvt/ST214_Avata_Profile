<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lớp border gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#FF2AABEE"
                android:endColor="#FFFFE167"
                android:angle="270" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Lớp fill trắng, nhỏ hơn 1dp để lộ border -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#B0FFFFFF" />
            <corners android:radius="15dp" />
        </shape>
    </item>

</layer-list>