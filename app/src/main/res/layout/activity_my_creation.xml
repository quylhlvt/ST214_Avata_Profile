<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_bg_splash">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvBack"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:elevation="2dp"
            android:src="@drawable/ic_back_app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.avatar.ocmaker.profile.utils.OuterStrokeTextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/cookies_regular"
            android:text="@string/my_work"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:strokeColor="@color/app_color"
            app:layout_constraintBottom_toBottomOf="@id/imvBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/imvBack"
            android:layout_marginHorizontal="80dp"
            app:outerStrokeColor="@color/app_color2"
            app:outerStrokeWidth="2dp"
            app:outerStrokeJoinStyle="miter"
            style="@style/single_marquee"
            android:singleLine="true"
            android:freezesText="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvTickAll"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:visibility="gone"
            android:layout_marginEnd="14dp"
            android:src="@drawable/imv_tick_all_false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imvBack"
            app:layout_constraintBottom_toBottomOf="@id/imvBack"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvDelete"
            android:layout_width="37dp"
            android:visibility="gone"
            android:layout_height="36dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/imv_delete1"
            app:layout_constraintEnd_toStartOf="@id/imvTickAll"
            app:layout_constraintTop_toTopOf="@id/imvBack"
            app:layout_constraintBottom_toBottomOf="@id/imvBack"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ll"
            app:strokeWidth="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/transparent"
            app:layout_constraintTop_toBottomOf="@id/imvBack">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
          >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btnAvatar"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintDimensionRatio="1.67:0.45"
                    style="@style/single_marquee"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_btn_my_work"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/rufing_personaluse"
                    android:freezesText="true"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@string/avatar"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/btnDesign"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_btn_my_work_unselect"
                    android:fontFamily="@font/rufing_personaluse"
                    android:gravity="center"
                    android:text="@string/design"
                    android:textColor="@color/app_color2"
                    android:textSize="16sp"
                    app:layout_constraintDimensionRatio="1.67:0.45"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
<!--        <FrameLayout-->
<!--            android:id="@+id/native_ads"-->
