        <LinearLayout
            android:id="@+id/llNull"
            android:visibility="gone"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

<!--        <ImageView-->
<!--            android:layout_width="150dp"-->
<!--            android:layout_height="150dp"-->
<!--            android:adjustViewBounds="true"-->
<!--            android:src="@drawable/img_no_item"/>-->

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNoItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/single_marquee"
                android:gravity="center"
                android:fontFamily="@font/rufing_personaluse"
                android:text="@string/no_item_here"
                android:textColor="@color/app_color2"
                android:freezesText="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textSize="20sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvAvatar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingBottom="8dp"

            android:layout_marginHorizontal="16dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll"
            app:spanCount="2"
            tools:itemCount="10"
            tools:listitem="@layout/item_my_avatar" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvDesign"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="16dp"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll"
            app:spanCount="2"
            tools:itemCount="10"
            tools:listitem="@layout/item_my_design" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@id/llBottom"
            app:layout_constraintTop_toTopOf="@+id/layoutSticker" />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layoutSticker"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginBottom="18dp"
            android:layout_marginHorizontal="6dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/llBottom">

            <LinearLayout
                android:id="@+id/btnWhatsApp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/btn_whatsapp"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_whatsapp" />

                <TextView
                    android:id="@+id/txtWhatsapp"
                    style="@style/single_marquee"
                    android:freezesText="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:focusable="true"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center"
                    android:text="@string/add_to_whatsapp"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnTelegram"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:background="@drawable/btn_telegram"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_telegram" />

                <TextView
                    android:id="@+id/txtTelegram"
                    style="@style/single_marquee"
                    android:freezesText="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center"
                    android:text="@string/add_to_telegram"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llBottom"
            android:layout_width="0dp"
            android:layout_marginBottom="18dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


