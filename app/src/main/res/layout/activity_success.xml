        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardImv"
            android:layout_marginVertical="13dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="29dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvContent"
            app:layout_constraintTop_toBottomOf="@id/imvBack"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="12dp"
            app:strokeWidth="0dp"
            android:layout_width="0dp"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imv"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvContent"
            style="@style/single_marquee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="28dp"
            android:ellipsize="marquee"
            android:fontFamily="@font/roboto_bold_italic"
            android:freezesText="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/image_has_been_saved_successfully"
            android:textColor="@color/app_color2"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/llBottom"/>
        <LinearLayout
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:visibility="visible"
            android:layout_marginBottom="270dp"
            android:layout_marginTop="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <LinearLayout
                android:id="@+id/btnMyWork"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="14dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_share_view"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <!--                <ImageView-->
                <!--                    android:layout_width="24dp"-->
                <!--                    android:layout_height="24dp"-->
                <!--                    android:src="@drawable/ic_mywork_success" />-->

                <TextView
                    android:id="@+id/tvMyWork"
                    style="@style/single_marquee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/cookies_regular"
                    android:freezesText="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@string/my_creation"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnDownload"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="14dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_share_view"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <!--                <ImageView-->
                <!--                    android:layout_width="24dp"-->
                <!--                    android:layout_height="24dp"-->
                <!--                    android:src="@drawable/ic_download_mywork" />-->

                <TextView
                    android:id="@+id/tvDownload"
                    style="@style/single_marquee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/cookies_regular"
                    android:marqueeRepeatLimit="3"
                    android:singleLine="true"
                    android:text="@string/download"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

