<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_bg_splash">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/coda_extra_bold"
            android:gravity="center"

            android:textColor="@color/app_color"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvSetting"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginEnd="16dp"
            android:elevation="1dp"
            android:src="@drawable/ic_setting"
            app:layout_constraintBottom_toBottomOf="@id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvTitle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageTitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/img_title_splash"
            app:layout_constraintDimensionRatio="360:224"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ScrollView
            android:id="@+id/scvMain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            android:elevation="1dp"
            android:paddingHorizontal="24dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageTitle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--                &lt;!&ndash;            gl05&ndash;&gt;-->
                <!--                <androidx.constraintlayout.widget.Guideline-->
                <!--                    android:id="@+id/gl05"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:orientation="vertical"-->
                <!--                    app:layout_constraintGuide_percent="0.57" />-->

                <!--            gl063-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/gl04"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/btnCreate"
                    app:layout_constraintDimensionRatio="1.76:1.35"
                    app:layout_constraintStart_toStartOf="@+id/btnCreate"
                    app:layout_constraintTop_toTopOf="@+id/btnCreate" />   <!--            gl063-->

                <!--                &lt;!&ndash;            gl061&ndash;&gt;-->
                <!--                <androidx.constraintlayout.widget.Guideline-->
                <!--                    android:id="@+id/gl061"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:orientation="vertical"-->
                <!--                    app:layout_constraintGuide_begin="120dp" />-->

                <!--            btnCreate-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnCreate"

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="3.13:1.38"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img_home1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:adjustViewBounds="true"
                        android:elevation="2dp"
                        android:src="@drawable/img_home1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1.45:1.38"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/img_home1_frame"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_frame_home1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="3.13:1.01"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <com.avatar.ocmaker.profile.utils.OuterStrokeTextView
                        android:id="@+id/tv1"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:outerStrokeColor="@color/app_color5"
                        app:outerStrokeWidth="2dp"
                        app:outerStrokeJoinStyle="miter"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="2dp"
                        android:fontFamily="@font/rufing_personaluse"
                        android:gravity="center"
                        android:text="@string/pony_maker"

                        app:layout_constraintBottom_toBottomOf="@+id/img_home1_frame"
                        app:layout_constraintEnd_toStartOf="@+id/img_home1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/img_home1_frame"
                       />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnRandomCat"

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="3.13:1.38"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnCreate">

                    <ImageView
                        android:id="@+id/img_home2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:adjustViewBounds="true"
                        android:elevation="2dp"
                        android:src="@drawable/img_home2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1.45:1.38"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/img_home2_frame"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_frame_home2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="3.13:1.01"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <com.avatar.ocmaker.profile.utils.OuterStrokeTextView
                        android:id="@+id/tv2"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:outerStrokeColor="#009D00"
                        app:outerStrokeWidth="2dp"
                        app:outerStrokeJoinStyle="miter"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="2dp"
                        android:fontFamily="@font/rufing_personaluse"
                        android:gravity="center"
                        android:text="@string/random_cat"
                        app:layout_constraintBottom_toBottomOf="@+id/img_home2_frame"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/img_home2"
                        app:layout_constraintTop_toTopOf="@+id/img_home2_frame"
                        style="@style/single_marquee"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintDimensionRatio="3:1.65"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnRandomCat">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/btnQuickMaker"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/img_home4_1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1.27:1.70"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/img_home4_2"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:adjustViewBounds="true"
                            android:elevation="2dp"
                            app:layout_constraintDimensionRatio="1.27:1.46"
                            android:src="@drawable/img_home4_2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            style="@style/single_marquee"
                            app:strokeJoinStyle="miter"
                            app:strokeMiter="2dp"
                            android:id="@+id/txtQuickMaker"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="@string/quickcreate"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="@color/app_color6"
                            android:fontFamily="@font/cookies_regular"
                            app:layout_constraintTop_toBottomOf="@+id/img_home4_2"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/btnMyAlbum"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1.27:1.65"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="@drawable/img_home3_1"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/img_home3_2"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:adjustViewBounds="true"
                            android:elevation="2dp"
                            app:layout_constraintDimensionRatio="1.27:1.46"
                            android:src="@drawable/img_home3_2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                            <TextView
                                style="@style/single_marquee"
                                app:strokeJoinStyle="miter"
                                app:strokeMiter="2dp"
                                android:id="@+id/txtMyWork"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="@string/my_work"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:textColor="@color/app_color5"
                                android:fontFamily="@font/cookies_regular"
                                app:layout_constraintTop_toBottomOf="@+id/img_home3_2"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <!--        <FrameLayout-->
        <!--            android:id="@+id/flNativeCollab"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:elevation="100dp"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>